<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:colorpicker="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:ignore="ResAuto">

    <ImageView
        android:id="@+id/iv"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:scaleType="centerInside"
        android:visibility="gone" />

    <com.komori.camera.colorpicker.ColorPickView
        android:id="@+id/color_picker_view"
        android:layout_width="300dp"
        android:layout_height="300dp"
        colorpicker:center_color="#ff0000"
        colorpicker:center_radius="10dp"
        colorpicker:image="@drawable/splash_background" />

    <TextView
        android:id="@+id/txt_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/color_picker_view"
        android:layout_marginTop="16dp"
        android:text="color" />

</RelativeLayout>